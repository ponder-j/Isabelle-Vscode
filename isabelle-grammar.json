{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Isabelle Theory",
  "scopeName": "source.isabelle",
  "fileTypes": ["thy"],
  "uuid": "37F7FDEA-2EAA-47C2-8EBF-2E8128D8ADD9",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#symbols"
    },
    {
      "include": "#theory-header"
    },
    {
      "include": "#section-keywords"
    },
    {
      "include": "#declaration-keywords"
    },
    {
      "include": "#proof-keywords"
    },
    {
      "include": "#goal-keywords"
    },
    {
      "include": "#minor-keywords"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#type-annotations"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.documentation.isabelle",
          "begin": "\\{\\*",
          "end": "\\*\\}"
        },
        {
          "name": "comment.block.documentation.cartouche.isabelle",
          "begin": "\\\\<open>",
          "end": "\\\\<close>",
          "patterns": [
            {
              "include": "#comments"
            }
          ]
        },
        {
          "name": "comment.block.isabelle",
          "begin": "\\(\\*",
          "end": "\\*\\)",
          "patterns": [
            {
              "include": "#comments"
            }
          ]
        },
        {
          "name": "comment.line.double-hyphen.isabelle",
          "match": "--.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.isabelle",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.isabelle",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.backtick.isabelle",
          "begin": "`",
          "end": "`"
        }
      ]
    },
    "symbols": {
      "patterns": [
        {
          "name": "constant.language.symbol.isabelle",
          "match": "\\\\<[a-zA-Z_][a-zA-Z0-9_']*>"
        }
      ]
    },
    "theory-header": {
      "patterns": [
        {
          "name": "meta.theory-header.isabelle",
          "match": "\\b(theory)\\s+([a-zA-Z0-9_]+)",
          "captures": {
            "1": {
              "name": "keyword.control.theory.isabelle"
            },
            "2": {
              "name": "entity.name.type.theory.isabelle"
            }
          }
        },
        {
          "name": "keyword.control.theory.isabelle",
          "match": "\\b(imports|begin|end)\\b"
        }
      ]
    },
    "section-keywords": {
      "patterns": [
        {
          "name": "markup.heading.isabelle",
          "match": "\\b(header|chapter|section|subsection|subsubsection|sect|subsect|subsubsect|paragraph|subparagraph)\\b"
        }
      ]
    },
    "declaration-keywords": {
      "patterns": [
        {
          "name": "keyword.control.declaration.isabelle",
          "match": "\\b(definition|lemma|theorem|corollary|proposition|fun|function|primrec|datatype|codatatype|typedef|type_synonym|class|instance|instantiation|consts|defs|axioms|axiomatization|declare|abbreviation|notation|no_notation|record|locale|context|interpretation|sublocale|ML|ML_file|text|txt|bundle|unbundle|attribute_setup|method_setup|setup|nominal_datatype|inductive|inductive_set|coinductive|coinductive_set|primcorec)\\b"
        }
      ]
    },
    "proof-keywords": {
      "patterns": [
        {
          "name": "keyword.control.proof.isabelle",
          "match": "\\b(proof|qed|by|apply|done|next|case|have|show|thus|hence|then|moreover|ultimately|finally|also|from|with|using|unfolding|assume|presume|obtain|guess|fix|let|consider|define|note|write|supply|defer|prefer|back|subgoal)\\b"
        },
        {
          "name": "invalid.illegal.abandon-proof.isabelle",
          "match": "\\b(sorry|oops)\\b"
        }
      ]
    },
    "goal-keywords": {
      "patterns": [
        {
          "name": "support.constant.goal.isabelle",
          "match": "\\b(schematic_lemma|schematic_theorem|schematic_corollary|schematic_goal|lemmas|named_theorems|method)\\b"
        }
      ]
    },
    "minor-keywords": {
      "patterns": [
        {
          "name": "keyword.other.minor.isabelle",
          "match": "\\b(where|and|is|shows|assumes|fixes|obtains|notes|includes|defines|for|if|in|when|abbrevs|attach|avoids|binder|checking|congs|constant|constrains|datatypes|file|functions|hints|identifier|infix|infixl|infixr|keywords|lazy|monos|morphisms|notes|output|overloaded|parametric|permissive|pervasive|private|qualified|rewrites|structure|unchecked|unsafe)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.logical.isabelle",
          "match": "(\\\\<and>|\\\\<or>|\\\\<not>|\\\\<longrightarrow>|\\\\<Rightarrow>|\\\\<forall>|\\\\<exists>)"
        },
        {
          "name": "keyword.operator.isabelle",
          "match": "(=|::|:|\\+|\\-|\\*|/|<|>|\\||@|#|\\^|!|\\?|~)"
        },
        {
          "name": "keyword.operator.proof.isabelle",
          "match": "(\\.\\.|\\{|\\}|\\.)"
        },
        {
          "name": "punctuation.terminator.isabelle",
          "match": ";"
        }
      ]
    },
    "type-annotations": {
      "patterns": [
        {
          "name": "support.type.builtin.isabelle",
          "match": "\\b(bool|nat|int|real|string|char|unit|prop|set|list|option|sum|prod|fun)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.isabelle",
          "match": "\\b[0-9]+(\\.[0-9]+)?([eE][+-]?[0-9]+)?\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.primed.isabelle",
          "match": "\\?[a-zA-Z_][a-zA-Z0-9_']*"
        },
        {
          "name": "variable.other.isabelle",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_']*\\b"
        }
      ]
    }
  }
}
